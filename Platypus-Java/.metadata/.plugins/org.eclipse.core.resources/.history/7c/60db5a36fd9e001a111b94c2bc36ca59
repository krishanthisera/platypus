package restuarentPlatypus;

import java.util.HashMap;
import java.util.Scanner;

public class PlatypusTerminal {
	public static void main(String[] args) {
		String orderType = null;
		Session session = new Session("Krishan");
		StdIn input = new StdIn(50);
		StdOut out = new StdOut(40);
		
		
		//out.easyPrint("welcome");
		do {
			
			
			do {
				String orderTypeIn = input.getInput("Order Type 1 for Pizza 9 for Pasta").toString();
				if (orderTypeIn == "1") {
					orderType = "pizza";
				}
				
				else if (orderTypeIn == "9") {
					orderType = "pasta";
				}
//				else {
//					continue;
//				}
				
				session.makeOrder(orderType, Integer.parseInt((input.getInput("How many of them (Quantity)").toString())));
				
				
			}
			while(input.getInput("Do you want to Add another Item [Yy][Nn]").toString().equalsIgnoreCase("Y"));
			out.orderSumary(session.readSession());
			
			
			}
			while(input.getInput("Do you want to Continue[Yy][Nn]").toString().equalsIgnoreCase("Y"));
		out.easyPrint("bye");
		
		
		
		
		

		
		
	}
	
}


